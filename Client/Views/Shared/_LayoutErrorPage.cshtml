<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>@ViewData["Title"]</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Muli:400" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Passion+One" rel="stylesheet">

	<!-- Font Awesome Icon -->
	<link type="text/css" rel="stylesheet" href="~/ErrorPage/css/font-awesome.min.css" />

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="~/ErrorPage/css/style.css" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body>

	<div id="notfound">
		<div class="notfound-bg"></div>
		<div class="notfound">
			@RenderBody()
		</div>
	</div>
	<script>
		let timer401 = 5
		setInterval(() => {
			document.getElementById('countdown401').innerHTML = timer401;
			timer401--;

			if (timer401 === 0) {
				location.href = "/";
			}
		}, 1000)
		let timer404 = 5
		setInterval(() => {
			document.getElementById('countdown404').innerHTML = timer404;
			timer404--;

			if (timer404 === 0) {
				location.href = "/";
			}
		}, 1000)
		let timer403 = 5
		setInterval(() => {
			document.getElementById('countdown403').innerHTML = timer403;
			timer403--;

			if (timer403 === 0) {
				location.href = "/home/index";
			}
		}, 1000)
	</script>

</body>
</html>
